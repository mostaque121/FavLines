generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Artist {
  id    String @id @default(cuid())
  slug      String   @unique
  name     String
  imageUrl String?

  lyrics   Lyrics[]
}


model Poet {
  id    String @id @default(cuid())
  slug      String   @unique
  name   String
  imageUrl String?

  poems  Poem[]
}


model Lyrics {
  id        String   @id @default(cuid())
  slug      String   @unique

  title     String
  body      String
  imageUrl String
  ytLink    String?
  favourite  Boolean  @default(false)

  artistId  String
  artist    Artist   @relation(fields: [artistId], references: [id])

  tags      String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Poem {
  id        String   @id @default(cuid())
  slug      String   @unique

  title     String
  body      String
  imageUrl String
  ytLink    String?
  favourite  Boolean  @default(false)

  poetId  String 
  poet      Poet    @relation(fields: [poetId], references: [id])

  tags      String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AdditionalData {
  id    String @id @default("additional_data")
  tags  String[]
}

